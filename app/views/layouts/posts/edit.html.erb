<%= form_with(model: @post) do |form| %>

<%= if @post.errors.any? %>
    <%= @post.errors.full_messages.each do |message| %>
        <div><%= message %></div>
    <%= end %>
<%= end %>

<div>
<%= form.label :title%>
<%= forms.text_field :title %>
</div>

<div>
<%= form.label :body%>
<%= forms.text_field :body %>
</div>

<div>
<%= form.submit%>
<%= end %>